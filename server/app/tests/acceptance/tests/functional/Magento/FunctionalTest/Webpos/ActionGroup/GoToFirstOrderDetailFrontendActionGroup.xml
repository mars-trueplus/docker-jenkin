<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="../../../../../../../dev/tests/acceptance/vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Test/etc/actionGroupSchema.xsd">
    <actionGroup name="GoToFirstOrderDetailFrontend">
        <arguments>
            <argument name="orderId" defaultValue="" type="string"/>
        </arguments>
        <click selector="{{MenuSection.menuButton}}" stepKey="clickMenuButton" />
        <waitForElementVisible selector="{{MenuSection.menuItem('item-order')}}" time="60" stepKey="waitMenuOrderShow" />
        <click selector="{{MenuSection.menuItem('item-order')}}" stepKey="goToOrderHistoryPage" />

        <waitForElementVisible selector="{{OrderListSection.firstItem}}" time="60" stepKey="waitFirstOrderShow" />

        <fillField selector="{{OrderListSection.inputSearch}}" userInput="{{orderId}}" stepKey="searchOrder" />
        <wait time="1" stepKey="loadSearch"/>
        <waitForElementVisible selector="{{OrderListSection.firstItem}}" time="60" stepKey="waitFirstOrderShowAfterSearch" />

        <click selector="{{OrderListSection.firstItem}}" stepKey="clickOnFirstOrder"/>
        <wait time="1" stepKey="loadOrder"/>
    </actionGroup>
</actionGroups>
