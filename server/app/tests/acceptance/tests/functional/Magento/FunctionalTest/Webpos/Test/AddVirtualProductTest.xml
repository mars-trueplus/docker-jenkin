<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../../../../../dev/tests/acceptance/vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Test/etc/testSchema.xsd">
    <test name="AddVirtualProductWithoutCustomOptionToCartAsNewItemTest">
        <annotations>
            <features value="Add product to cart"/>
            <stories value="Add virtual product to cart"/>
            <title value="Add new virtual product without custom option."/>
            <description value="Add virtual product without custom option as a new item."/>
            <severity value="CRITICAL"/>
            <testCaseId value="AVP-01"/>
            <group value="addVirtualProductWithoutOptionAsNewItem"/>
            <group value="addVirtualProduct"/>
            <group value="pwapos"/>
        </annotations>
        <before>
            <createData stepKey="visibleProductOnPos" entity="pos_virtual_product" />
            <actionGroup ref="PosOnCheckoutPage" stepKey="PosOnCheckoutPage"/>
        </before>
        <actionGroup ref="ClearCart" stepKey="ClearCart">
        </actionGroup>

        <actionGroup ref="SearchAndClickProduct" stepKey="SearchAndClickProduct">
            <argument name="dataProduct" value="pos_virtual_product"/>
        </actionGroup>

        <waitForElementVisible selector="{{CartSection.productFoundOnCartByName(pos_virtual_product.name)}}" time="30" stepKey="waitProductIsAddedToCartSuccessfully"/>
    </test>

    <!--Increase qty-->
    <test name="AddVirtualProductWithoutCustomOptionToCartForIncreaseQtyTest">
        <annotations>
            <features value="Add product to cart"/>
            <stories value="Add virtual product to cart"/>
            <title value="Increase qty of virtual product without custom option in cart."/>
            <description value="Add virtual product without custom option to cart, then qty of the same item in cart will increase."/>
            <severity value="CRITICAL"/>
            <testCaseId value="AVP-02"/>
            <group value="addVirtualProductWithoutOptionForIncreaseQty"/>
            <group value="addVirtualProduct"/>
            <group value="pwapos"/>
        </annotations>
        <before>
            <createData stepKey="visibleProductOnPos" entity="pos_virtual_product" />
            <actionGroup ref="PosOnCheckoutPage" stepKey="PosOnCheckoutPage"/>
        </before>
        <actionGroup ref="ClearCart" stepKey="ClearCart">
        </actionGroup>

        <actionGroup ref="SearchAndClickProduct" stepKey="SearchAndClickProduct">
            <argument name="dataProduct" value="pos_virtual_product"/>
        </actionGroup>

        <waitForElementVisible selector="{{CartSection.productFoundOnCartByName(pos_virtual_product.name)}}" time="30" stepKey="waitProductIsAddedToCartSuccessfully"/>

        <click stepKey="clickOnProductFoundInListAgain" selector="{{ProductListSection.firstProduct}}"/>

        <waitForElementVisible selector="{{CartSection.productQtyInCart(pos_virtual_product.name))}}" time="30" stepKey="waitProductIsAddedToCartSuccessfullySecondTime"/>

        <grabTextFrom selector="{{CartSection.productQtyInCart(pos_virtual_product.name)}}" stepKey="grabQtyOfItem"/>
        <assertEquals message="Product's qty is correct." stepKey="compareQty">
            <expectedResult type="float">2</expectedResult>
            <actualResult type="variable">grabQtyOfItem</actualResult>
        </assertEquals>
    </test>

    <test name="AddVirtualProductWithCustomOptionToCartAsNewItemTest">
        <annotations>
            <features value="Add product to cart"/>
            <stories value="Add virtual product to cart"/>
            <title value="Add new virtual product with custom option."/>
            <description value="Add virtual product with custom option as a new item."/>
            <severity value="CRITICAL"/>
            <testCaseId value="AVP-03"/>
            <group value="addVirtualProductWithOptionAsNewItem"/>
            <group value="addVirtualProduct"/>
            <group value="pwapos"/>
        </annotations>
        <before>
            <createData stepKey="visibleProductOnPos" entity="pos_virtual_product_with_custom_option" />
            <actionGroup ref="PosOnCheckoutPage" stepKey="PosOnCheckoutPage"/>
        </before>
        <actionGroup ref="ClearCart" stepKey="ClearCart">
        </actionGroup>

        <actionGroup ref="SearchAndClickProduct" stepKey="SearchAndClickProduct">
            <argument name="dataProduct" value="pos_virtual_product_with_custom_option"/>
        </actionGroup>

        <waitForElementVisible selector="{{PosCheckoutPopupVirtualProductSection.customOptionInputBox}}" time="30" stepKey="waitProductPopupCustomOptionShow"/>

        <actionGroup ref="AddCustomOptionForVirtualProduct" stepKey="AddCustomOptionForVirtualProduct">
            <argument name="dataProduct" value="pos_virtual_product_with_custom_option"/>
        </actionGroup>

        <waitForElementVisible selector="{{CartSection.productFoundOnCartByName(pos_virtual_product_with_custom_option.name)}}" time="30" stepKey="waitProductIsAddedToCartSuccessfully"/>
    </test>

    <!--Increase qty-->
    <test name="AddVirtualProductWithCustomOptionToCartForIncreaseQtyTest">
        <annotations>
            <features value="Add product to cart"/>
            <stories value="Add virtual product to cart"/>
            <title value="Increase qty of virtual product with custom option in cart."/>
            <description value="Add virtual product with custom option to cart, then qty of the same item in cart will increase."/>
            <severity value="CRITICAL"/>
            <testCaseId value="AVP-04"/>
            <group value="addVirtualProductWithOptionForIncreaseQty"/>
            <group value="addVirtualProduct"/>
            <group value="pwapos"/>
        </annotations>
        <before>
            <createData stepKey="visibleProductOnPos" entity="pos_virtual_product_with_custom_option" />
            <actionGroup ref="PosOnCheckoutPage" stepKey="PosOnCheckoutPage"/>
        </before>

        <actionGroup ref="ClearCart" stepKey="ClearCart">
        </actionGroup>

        <actionGroup ref="SearchAndClickProduct" stepKey="SearchAndClickProduct">
            <argument name="dataProduct" value="pos_virtual_product_with_custom_option"/>
        </actionGroup>

        <waitForElementVisible selector="{{PosCheckoutPopupVirtualProductSection.customOptionInputBox}}" time="30" stepKey="waitProductPopupCustomOptionShow"/>

        <actionGroup ref="AddCustomOptionForVirtualProduct" stepKey="AddCustomOptionForVirtualProduct">
            <argument name="dataProduct" value="pos_virtual_product_with_custom_option"/>
        </actionGroup>

        <waitForElementVisible selector="{{CartSection.productFoundOnCartByName(pos_virtual_product_with_custom_option.name)}}" time="30" stepKey="waitProductIsAddedToCartSuccessfully"/>

        <!-- Click to add product second time -->
        <click stepKey="clickOnProductFoundInListAgain" selector="{{ProductListSection.firstProduct}}"/>

        <waitForElementVisible selector="{{PosCheckoutPopupVirtualProductSection.customOptionInputBox}}" time="30" stepKey="waitProductPopupCustomOptionShowAgain"/>

        <actionGroup ref="AddCustomOptionForVirtualProduct" stepKey="AddCustomOptionForVirtualProductSecondTime">
            <argument name="dataProduct" value="pos_virtual_product_with_custom_option"/>
        </actionGroup>

        <waitForElementVisible selector="{{CartSection.productFoundOnCartByName(pos_virtual_product_with_custom_option.name)}}" time="30" stepKey="waitProductIsAddedToCartSuccessfullySecondTime"/>

        <grabTextFrom selector="{{CartSection.productQtyInCart(pos_virtual_product_with_custom_option.name)}}" stepKey="grabQtyOfItem"/>
        <assertEquals message="Product's qty is correct." stepKey="compareQty">
            <expectedResult type="float">2</expectedResult>
            <actualResult type="variable">grabQtyOfItem</actualResult>
        </assertEquals>
    </test>
</tests>
